<h2> Login </h2>
<%= form_for :user, :url => 'login' do |f| %>
  <div class="field"> 
    <%= f.label :email %> <br/>
    <%= f.text_field :email %>
  </div>
  <div class="field"> 
    <%= f.label :password %> <br/>
    <%= f.text_field :password  %>
  </div>
  <div class="actions">
    <%= f.submit 'submit'%>
  </div>
<% end %>

